font-face(font-name, filename)
  @font-face {
      font-family: font-name;
      font-style: normal;
      font-weight: normal;
      font-stretch: normal;

      src: url($font-path + filename + '.eot');  /* IE9 Compat Modes */

      src: local(filename), /* Set Fallback Local Font */
           url($font-path + filename + '.eot?#iefix') format('embedded-opentype'), /*IE6-IE8*/\
           url($font-path + filename + '.woff2') format('woff2'), /*Super Modern Browsers*/ \
           url($font-path + filename + '.woff') format('woff'), /*Modern Browsers*/\
           url($font-path + filename + '.ttf')  format('truetype'), /*Safari, Android, iOS*/\
           url($font-path + filename + '.svg#svgFontName') format('svg'); /*Legacy iOS*/
  }
