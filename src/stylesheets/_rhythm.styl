set-rhythm()
  h1, h2, h3, h4, h5, h6
    font-weight: $header-weight

  for num in (1..6)
    h{num}
      adjust-font-size-to($font-size-h + num)
      rhythm-margins(1, 1, $font-size-h + num)

  p
    adjust-font-size-to($base-font-size)
    rhythm-margins(1, 1, $base-font-size)
    hyphens: auto

  ul,
  ol,
  dl
      rhythm-margins(1, 1, $base-font-size)

      li &
          margin: 0
